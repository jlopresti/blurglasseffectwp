                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid x:Name="BackgroundPanel">
                <Image Source="ski.jpg" Stretch="UniformToFill"></Image>
            </Grid>
